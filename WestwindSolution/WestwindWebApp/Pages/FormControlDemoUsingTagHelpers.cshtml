@page
@model WestwindWebApp.Pages.FormControlDemoUsingTagHelpersModel
@{
}
<div class="alert-info">
    @Model.FeedbackMessage
</div>
<form method="post">

    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input type="text" class="form-control" placeholder="Enter your name" asp-for="Username" />
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input type="number" min="18" max="100" class="form-control" asp-for="Age" />
    </div>

    <div class="mb-3">
        <label for="floatingSelect">Gender</label>
        <select class="form-select" id="floatingSelect" asp-for="Gender">
            <option selected>Select Your Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="floatingSelect">Department</label>
        <select class="form-select" asp-for="Department">
            <option selected>Select Your Department</option>
            <option value="BAIST">BAIST</option>
            <option value="DMIT">DMIT</option>
            <option value="CNT">CNT</option>
            <option value="CET">CET</option>
        </select>
    </div>

    <div class="mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Subscribe"> 
        <label class="form-check-label" for="flexCheckDefault">
            Would You Like Subscribe?
        </label>
    </div>

    <div class="mb-3">
        <label for="floatingTextarea">Comments</label>
        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" asp-for="Comments"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

